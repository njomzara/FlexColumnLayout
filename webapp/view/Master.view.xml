<mvc:View displayBlock="true" controllerName="com.get.FelxColumnApp.controller.Master" height="100%"
	  xmlns="sap.m"
	  xmlns:f="sap.f"
	  xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId"
				   toggleHeaderOnTitleClick="false" >
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Requirements Overview"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<Table id="requirementsTable"
				   inset="false"
				   items="{
						path: 'requirements>/RequirementCollection',
						sorter: {
							path: 'Name'
						}
					}"
				   class="sapFDynamicPageAlignContent"
				   width="auto">
				<headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<SearchField search="onSearch" width="17.5rem"/>
						<OverflowToolbarButton icon="sap-icon://sort" type="Transparent" press="onSort"/>
						<OverflowToolbarButton icon="sap-icon://add" type="Emphasized" press="onNewRequirement"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Text text="Requirement" />
					</Column>
					<Column	hAlign="End">
						<Text text="Status" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onListItemPress">
						<cells>
							<ObjectIdentifier title="{requirements>RequirementId}" text="{requirements>ProductTxt}" />
							<ObjectNumber
									number="{
										parts:[{path:'requirements>Quantity'},{path:'requirements>Unit'}],
										type: 'sap.ui.model.type.Currency',
										formatOptions: {showMeasure: false}
									}"
									unit="{requirements>Unit}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
		
	</f:DynamicPage>
</mvc:View>