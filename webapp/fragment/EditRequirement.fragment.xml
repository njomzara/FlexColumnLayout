<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:Form id="fEditRequirement"
				editable="true">
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="3"
					labelSpanL="3"
					labelSpanM="3"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="4"
					emptySpanL="4"
					emptySpanM="4"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="Product">
							<f:fields>
								<Select 
									id="slProduct" 
									selectedKey="{requirements>ProductId}"
									items="{
										path: 'requirements>/ProductCollection',
										sorter: { path: 'ProductTxt' }
									}">
									<core:Item key="{requirements>ProductId}" text="{requirements>ProductTxt}" />
								</Select>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Quantity">
							<f:fields>
								<Input value="{requirements>Quantity}" />
								<Input value="{requirements>Unit}" editable="false">
									<layoutData>
										<l:GridData span="XL1 L2 M2 S4" />
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Status">
							<f:fields>
								<Select 
									id="slStatus" 
									selectedKey="{requirements>StatusId}"
									items="{
										path: 'requirements>/RequirementStatus',
										sorter: { path: 'StatusId' }
									}">
									<core:Item key="{requirements>StatusId}" text="{requirements>StatusTxt}" />
								</Select>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>