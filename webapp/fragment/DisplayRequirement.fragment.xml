<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:Form id="fDisplayRequirement"
				editable="false">
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="3"
					labelSpanL="3"
					labelSpanM="3"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="4"
					emptySpanL="4"
					emptySpanM="4"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="Product">
							<f:fields>
								<Text text="{requirements>ProductTxt}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Creation/Edit Date">
							<f:fields>
								<Text text="{requirements>CreationDate}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Quantity">
							<f:fields>
								<ObjectNumber
									number="{
										parts:[{path:'requirements>Quantity'},{path:'requirements>Unit'}],
										type: 'sap.ui.model.type.Currency',
										formatOptions: {showMeasure: false}
									}"
									unit="{requirements>Unit}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Status">
							<f:fields>
								<Text text="{requirements>StatusTxt}"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>